# Niibot 環境變數設定範例
# 複製此檔案為 .env 並填入實際值

# === 核心設定 ===
# Discord Bot Token (必要)
TOKEN=your_discord_bot_token_here

# Bot 環境 (local 或 prod)
BOT_ENV=local

# === Twitter 監控設定 ===
# Twitter Bearer Token (從 Twitter Developer Portal 取得)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Google Translate API Key (從 Google Cloud Console 取得，可選)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# === 權限設定 ===
# 機器人管理員 ID (用逗號分隔)
BOT_ADMIN_IDS=your_discord_user_id_here

# 信任用戶 ID (用逗號分隔，可選)
TRUSTED_USER_IDS=

# === 功能設定 ===
# 目標身分組 ID (用於特定功能)
TARGET_ROLE_ID=1378242954929639514

# 工作時數設定
WORK_HOURS=9

# 抽獎冷卻時間 (秒)
DRAW_COOLDOWN=30

# 最大佇列大小
MAX_QUEUE_SIZE=50

# 預設隊伍數量
DEFAULT_TEAMS=2

# === 日誌設定 ===
# 日誌級別 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=WARNING

# 日誌檔案路徑 (可選，本機開發時使用)
LOG_FILE=logs/niibot.log

# JSON 日誌檔案路徑
JSON_LOG_FILE=logs/niibot_local.json

# === 其他設定 ===
# 資料目錄
DATA_DIR=data

# 表情符號統計儲存間隔 (秒)
EMOJI_SAVE_INTERVAL=30

# 提醒清理間隔 (小時)
REMINDER_CLEANUP_HOURS=24