# === Discord Auth ===
DISCORD_BOT_TOKEN=your_token_here

# === AI (OpenRouter) ===
OPENROUTER_API_KEY=your_api_key_here
OPENROUTER_MODEL=tngtech/deepseek-r1t2-chimera:free

# === Database ===
DATABASE_URL=postgresql://postgres.[ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres

# === Commands ===
DISCORD_SYNC_COMMANDS=false             # Sync slash commands on startup
# DISCORD_GUILD_ID=123456789            # DEV only, fast sync to guild

# === Presence ===
DISCORD_STATUS=online                   # online | idle | dnd | invisible
DISCORD_ACTIVITY_TYPE=streaming         # playing | streaming | listening | watching
DISCORD_ACTIVITY_NAME=Type /help
# DISCORD_ACTIVITY_URL=https://twitch.tv/channel  # Required for streaming type

# === Server ===
PYTHONUNBUFFERED=1
LOG_LEVEL=INFO                          # DEBUG | INFO | WARNING | ERROR
# PORT=8080                             # DEV only, auto-set by Render

# === Rate Limit ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WARNING_THRESHOLD=0.7
RATE_LIMIT_CRITICAL_THRESHOLD=0.9
