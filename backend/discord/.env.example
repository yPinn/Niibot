# === Required ===
DISCORD_BOT_TOKEN=your_token_here
OPENROUTER_API_KEY=your_api_key_here
OPENROUTER_MODEL=tngtech/deepseek-r1t2-chimera:free
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres

# === Discord ===
# DISCORD_GUILD_ID=123456789             # 僅 DEV 快速同步，PROD 不設定
DISCORD_SYNC_COMMANDS=false

# === Presence ===
DISCORD_STATUS=online                    # online/idle/dnd/invisible
DISCORD_ACTIVITY_TYPE=streaming          # playing/streaming/listening/watching
DISCORD_ACTIVITY_NAME=使用 /help 查看指令
# DISCORD_ACTIVITY_URL=https://twitch.tv/channel  # streaming 類型需要

# === Production ===
PYTHONUNBUFFERED=1                       # Docker/Render 即時日誌輸出
# PORT=8080                              # Render 自動設定，僅 DEV 需要

# === Logging ===
LOG_LEVEL=INFO                           # DEV: DEBUG
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WARNING_THRESHOLD=0.7
RATE_LIMIT_CRITICAL_THRESHOLD=0.9
