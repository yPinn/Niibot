# === Twitch OAuth ===
CLIENT_ID=your_twitch_client_id_here
CLIENT_SECRET=your_twitch_client_secret_here

# === Authentication ===
JWT_SECRET_KEY=your_jwt_secret_key_here

# === Database ===
DATABASE_URL=postgresql://postgres.[ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres

# === Discord OAuth ===
# DISCORD_CLIENT_ID=your_discord_client_id_here
# DISCORD_CLIENT_SECRET=your_discord_client_secret_here

# === Service URLs ===
FRONTEND_URL=https://your-frontend.pages.dev
API_URL=https://your-api.onrender.com
TWITCH_BOT_URL=https://your-twitch-bot.onrender.com
DISCORD_BOT_URL=https://your-discord-bot.onrender.com

# === Server ===
ENVIRONMENT=production                  # development | production
PYTHONUNBUFFERED=1
# LOG_LEVEL=INFO                        # Default: INFO
# PORT=8000                             # DEV only, auto-set by Render

# === Keep-Alive ===
# ENABLE_KEEP_ALIVE=true                # Default: true
# KEEP_ALIVE_INTERVAL=300               # Default: 300s
