# === Twitch OAuth ===
CLIENT_ID=your_twitch_client_id_here
CLIENT_SECRET=your_twitch_client_secret_here

# === Authentication ===
JWT_SECRET_KEY=your_jwt_secret_key_here

# === Database ===
DATABASE_URL=postgresql://postgres.[ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres

# === Discord OAuth ===
# DISCORD_CLIENT_ID=your_discord_client_id_here
# DISCORD_CLIENT_SECRET=your_discord_client_secret_here

# === Service URLs ===
FRONTEND_URL=http://localhost:3000      # PROD: your frontend URL
API_URL=http://localhost:8000           # PROD: your API URL
TWITCH_BOT_URL=http://localhost:4344    # PROD: your Twitch bot URL
DISCORD_BOT_URL=http://localhost:8080   # PROD: your Discord bot URL

# === Server ===
ENVIRONMENT=development                 # development | production
PYTHONUNBUFFERED=1
LOG_LEVEL=INFO                          # DEBUG | INFO | WARNING | ERROR
# PORT=8000                             # DEV only, auto-set by Render

# === Keep-Alive ===
ENABLE_KEEP_ALIVE=true                  # Internal heartbeat for Render
# KEEP_ALIVE_INTERVAL=300               # Default: 300s
