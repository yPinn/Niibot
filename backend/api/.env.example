# === Required ===
CLIENT_ID=your_twitch_client_id_here
CLIENT_SECRET=your_twitch_client_secret_here
JWT_SECRET_KEY=your_jwt_secret_key_here
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres

# === Discord OAuth (Optional) ===
# DISCORD_CLIENT_ID=your_discord_client_id_here
# DISCORD_CLIENT_SECRET=your_discord_client_secret_here

# === URLs (PROD: 替換為實際部署網址) ===
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:8000
TWITCH_BOT_URL=http://localhost:4344
DISCORD_BOT_URL=http://localhost:8080

# === Production ===
ENVIRONMENT=development                 # PROD: production
PYTHONUNBUFFERED=1                      # Docker/Render 即時日誌輸出
# PORT=8000                             # Render 自動設定，僅 DEV 需要

# === Keep-Alive (Render) ===
ENABLE_KEEP_ALIVE=true                  # 啟用內部心跳
# KEEP_ALIVE_INTERVAL=300               # 心跳間隔秒數 (預設 300)

# === Logging ===
LOG_LEVEL=INFO                          # DEV: DEBUG
