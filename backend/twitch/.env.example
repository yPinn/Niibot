# Twitch Application Settings (https://dev.twitch.tv/console)
CLIENT_ID=your_client_id_here
CLIENT_SECRET=your_client_secret_here
BOT_ID=your_bot_user_id_here
OWNER_ID=your_owner_user_id_here

# OAuth Redirect URI (optional)
# Default: http://localhost:4343/oauth/callback
# For remote access, use ngrok or deploy a separate OAuth server
# OAUTH_REDIRECT_URI=https://your-domain.com/oauth/callback

# Database Connection
# Format: postgresql://username:password@host:port/database
# Supabase: postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://user:password@localhost:5432/twitchio_bot

# OpenRouter AI (https://openrouter.ai/keys)
OPENROUTER_API_KEY=your_openrouter_api_key_here
# Available free models:
# OPENROUTER_MODEL=x-ai/grok-4.1-fast:free
# OPENROUTER_MODEL=google/gemini-2.0-flash-exp:free
OPENROUTER_MODEL=z-ai/glm-4.5-air:free
# OPENROUTER_MODEL=tngtech/deepseek-r1t2-chimera:free

# Optional: EventSub Conduit ID (auto-generated if not set)
# CONDUIT_ID=your_conduit_id_here

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
