# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Markdown and documentation
*.md text eol=lf
*.txt text eol=lf

# SQL files
*.sql text eol=lf

# Config files
.env.example text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Images (binary)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Archives (binary)
*.zip binary
*.tar binary
*.gz binary
*.rar binary
